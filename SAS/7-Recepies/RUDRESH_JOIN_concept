Data A;
Input ID Name$ Height;
cards;
1 A 1
3 B 2
5 C 2
7 D 2
9 E 2
;
run;

Data B;
Input ID Name$ Weight;
cards;
2 A 2
4 B 3
5 C 4
7 D 5
;
run;

/* INNER JOIN */

PROC SQL ;
TITLE " INNER JOIN ";
SELECT * FROM a, B
WHERE A.id=B.ID;
QUIT;

PROC SQL ;
TITLE " INNER JOIN ALIAS";
SELECT A.ID,A.NAME,B.WEIGHT FROM a, B
WHERE A.id=B.ID;
QUIT;

PROC SQL ;
TITLE " INNER JOIN USING ON CLAUSE";
SELECT * FROM a INNER JOIN B
ON A.id=B.ID;
QUIT;

TITLE " BASE SAS ";
PROC SORT DATA=A;
BY ID;
RUN;
PROC SORT DATA=B;
BY ID;
RUN;

DATA LEFJOIN;
MERGE A(IN=X) B(IN=Y);
BY ID;
IF x AND Y;
RUN;

/* left JOIN */

PROC SQL ;
TITLE " left JOIN USING ON CLAUSE";
SELECT * FROM a left JOIN B
ON A.id=B.ID;
QUIT;

DATA LEFJOIN;
MERGE A(IN=X) B(IN=Y);
BY ID;
IF x;
RUN;

/* RIGHT JOIN */
PROC SQL ;
TITLE " RIGHT JOIN USING ON CLAUSE";
SELECT * FROM a RIGHT JOIN B
ON A.id=B.ID;
QUIT;

DATA rightJOIN;
MERGE A(IN=X) B(IN=Y);
BY ID;
IF y;
RUN;

/* outer JOIN */
PROC SQL ;
TITLE " OUTER JOIN USING ON CLAUSE";
SELECT * FROM a full JOIN B
ON A.id=B.ID;
QUIT;

DATA rightJOIN;
MERGE A(IN=X) B(IN=Y);
BY ID;
RUN;