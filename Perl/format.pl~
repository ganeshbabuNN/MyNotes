#!/usr/bin/perl
format EMPLOYEE =
==============================================================
@<<<<<<<<<<<<<<<<<<<<<<< @<<
$name, $age
@#####.##
$salary
=============================================================

select(STDOUT);
$~ = EMPLOYEE;

@n = ("bhuvan", "panday", "kon");
@a = (20, 30, 40);
@s = (20000.00, 30000.00, 40000.00);

$i = 0;
foreach (@n){
$name = $_;
$age = $a[$i];
$salary = $s[$i++];
write;

}
