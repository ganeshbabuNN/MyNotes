<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts-config PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 1.1//EN" "http://jakarta.apache.org/struts/dtds/struts-config_1_1.dtd">

<struts-config>
<form-beans>
	<form-bean name ="regForm" type="com.ganesh.struts1.RegisterForm"/>
</form-beans>
<action-mappings>
	<action path ="/RegSubmit" 
			name ="regForm" 
			type ="com.ganesh.struts1.RegisterAction" 
			validate="true"
			input ="/register.jsp">
		    <forward name = "home" path="/home.jsp"/>
    </action>
</action-mappings>
<message-resources parameter = "com.ganesh.struts1.messages"/> 
<plug-in className="org.apache.struts.validator.ValidatorPlugIn">
<set-property property="pathnames" value="/WEB-INF/validator-rules.xml,/WEB-INF/myform-validations.xml" />
</plug-in> 
</struts-config>

