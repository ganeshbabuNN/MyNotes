<?xml version="1.0" encoding="UTF-8"?>

<faces-config
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-facesconfig_1_2.xsd"
    version="1.2">

<application>
	<locale-config>
	<default-locale>hi</default-locale>
	<supported-locale>en</supported-locale>
	<supported-locale>kn</supported-locale>
	<supported-locale>te</supported-locale>
	</locale-config>
	<message-bundle>com.ganesh.jsf.messages</message-bundle>
</application>
<managed-bean>
	<managed-bean-name>studentBean</managed-bean-name>
	<managed-bean-class>com.ganesh.jsf.StudentBean</managed-bean-class>
	<managed-bean-scope>session</managed-bean-scope>
</managed-bean>

<navigation-rule>
	<navigation-case>
		<from-outcome>search</from-outcome>
		<to-view-id>/search.jsp</to-view-id>
	</navigation-case>
</navigation-rule>
</faces-config>
